<Window x:Class="Contect_Book.Exit_Message_Box"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contect_Book"
        mc:Ignorable="d"
        Title="Exit" Height="200" Width="400" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid>
        <TextBlock Text="是否保存更改？" FontSize="20" Margin="96,50,96,95" TextAlignment="Center"/>
        <StackPanel Orientation="Horizontal" Height="24" Width="240" Margin="76,95,76,50">
            <Button Width="80" Content="是(Y)" Click="Click_Exit_Yes"/>
            <Button Width="80" Content="否(N)" Click="Click_Exit_No"/>
            <Button Width="80" Content="取消(C)" Click="Click_Exit_Cancel"/>
        </StackPanel>
    </Grid>
</Window>
